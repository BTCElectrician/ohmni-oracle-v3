#!/bin/bash

# Ohmni Oracle v3 - Command Line Interface
# Usage: ohmni process <folder_name>
# Example: ohmni process ElecShuffleTest

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_info() {
    echo -e "${BLUE}‚ÑπÔ∏è  $1${NC}"
}

print_success() {
    echo -e "${GREEN}‚úÖ $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}‚ö†Ô∏è  $1${NC}"
}

print_error() {
    echo -e "${RED}‚ùå $1${NC}"
}

ensure_repo_ready() {
    if [ ! -f "main.py" ]; then
        print_error "main.py not found. Please run this command from the ohmni-oracle-v3 directory"
        print_info "Current directory: $(pwd)"
        return 1
    fi

    if [ -z "$VIRTUAL_ENV" ]; then
        print_warning "Virtual environment not active. Activating..."
        if [ -f "venv/bin/activate" ]; then
            # shellcheck disable=SC1091
            source venv/bin/activate
            print_success "Virtual environment activated"
        else
            print_error "Virtual environment not found. Run 'make setup' first"
            return 1
        fi
    fi
    return 0
}

load_search_env() {
    if [ -z "$AZURE_SEARCH_ENDPOINT" ] || [ -z "$AZURE_SEARCH_API_KEY" ]; then
        if [ -f ".env" ]; then
            set -a
            # shellcheck disable=SC1091
            source .env
            set +a
        fi
    fi
}

# Function to show help
show_help() {
    echo "Ohmni Oracle v3 - Document Processing Tool"
    echo ""
    echo "Usage:"
    echo "  ohmni process <folder_name>     Process documents in a folder"
    echo "  ohmni file <folder/file>        Process a single file within a folder"
    echo "  ohmni validate <folder_name>    Check coverage - verify all schedule data is captured"
    echo "  ohmni search <folder_name>      Run schedule post-pass + upload to Azure Search"
    echo "  ohmni search-templates <folder> Refresh templates only + incremental upload"
    echo "  ohmni help                      Show this help message"
    echo ""
    echo "Examples:"
    echo "  ohmni process ElecShuffleTest   Process ElecShuffleTest folder"
    echo "  ohmni file ElecShuffleTest/Electrical/E0.01-SPECIFICATIONS-Rev.3.pdf"
    echo "  ohmni validate ElecShuffleTest Check that all schedule data is captured (DO THIS BEFORE INDEXING!)"
    echo "  ohmni search ElecShuffleTest    Generate index payloads and upload to Azure Search"
    echo ""
    echo "The folder should be located in: /Users/collin/Desktop/"
    echo ""
    echo "Available folders on Desktop:"
    if [ -d "/Users/collin/Desktop" ]; then
        ls -1 /Users/collin/Desktop/ | grep -v "^\.$" | grep -v "^\.\.$" | while read folder; do
            if [ -d "/Users/collin/Desktop/$folder" ]; then
                echo "  üìÅ $folder"
            fi
        done
    else
        echo "  (Desktop directory not found)"
    fi
}

# Function to process a folder
process_folder() {
    local folder_name="$1"
    local desktop_path="/Users/collin/Desktop"
    local full_path="$desktop_path/$folder_name"

    # Check if folder exists
    if [ ! -d "$full_path" ]; then
        print_error "Folder '$folder_name' not found in Desktop"
        print_info "Available folders:"
        ls -1 "$desktop_path" | grep -v "^\.$" | grep -v "^\.\.$" | while read folder; do
            if [ -d "$desktop_path/$folder" ]; then
                echo "  üìÅ $folder"
            fi
        done
        return 1
    fi
    
    if ! ensure_repo_ready; then
        return 1
    fi
    
    # Set output folder to <job>/processed
    local output_path="$full_path/processed"
    mkdir -p "$output_path"
    
    print_info "Processing folder: $folder_name"
    print_info "Input path: $full_path"
    print_info "Output path: $output_path"
    echo ""
    
    # Load environment (so storage/search creds are available)
    load_search_env

    # Run the main script
    print_success "Starting Ohmni Oracle v3 processing..."
    python3 main.py "$full_path" "$output_path"
    
    local exit_code=$?
    if [ $exit_code -eq 0 ]; then
        print_success "Processing completed successfully!"
        print_info "Results saved to: $output_path"
    else
        print_error "Processing failed with exit code: $exit_code"
    fi
    
    return $exit_code
}

# Function to process a single file
process_file() {
    local file_path="$1"
    local desktop_path="/Users/collin/Desktop"
    local full_path="$desktop_path/$file_path"
    
    # Check if file exists
    if [ ! -f "$full_path" ]; then
        print_error "File '$file_path' not found in Desktop"
        print_info "Make sure the path is relative to Desktop (e.g., ElecShuffleTest/Electrical/file.pdf)"
        return 1
    fi
    
    if ! ensure_repo_ready; then
        return 1
    fi
    
    # Extract folder and file info
    local folder_name=$(dirname "$file_path" | cut -d'/' -f1)
    local file_name=$(basename "$file_path")
    local subfolder=$(dirname "$file_path" | cut -d'/' -f2-)
    
    # Create temporary folder structure
    local temp_dir=$(mktemp -d)
    local temp_file_path="$temp_dir/$subfolder/$file_name"
    
    # Create the subfolder structure in temp directory
    mkdir -p "$(dirname "$temp_file_path")"
    
    # Copy the file to temp directory
    cp "$full_path" "$temp_file_path"
    
    local output_path="$desktop_path/$folder_name/processed"
    mkdir -p "$output_path"
    
    print_info "Processing single file: $file_name"
    print_info "From folder: $folder_name/$subfolder"
    print_info "Input path: $full_path"
    print_info "Output path: $output_path"
    echo ""
    
    # Run the main script on temp directory
    print_success "Starting Ohmni Oracle v3 processing..."
    python3 main.py "$temp_dir" "$output_path"
    
    local exit_code=$?
    
    # Clean up temp directory
    rm -rf "$temp_dir"
    
    if [ $exit_code -eq 0 ]; then
        print_success "Processing completed successfully!"
        print_info "Results saved to: $output_path"
    else
        print_error "Processing failed with exit code: $exit_code"
    fi
    
    return $exit_code
}

validate_coverage() {
    local folder_name="$1"
    local desktop_path="/Users/collin/Desktop"
    local full_path="$desktop_path/$folder_name"
    local processed_path="$full_path/processed"

    if [ ! -d "$processed_path" ]; then
        print_error "Processed folder not found: $processed_path"
        print_info "Run 'ohmni process $folder_name' first to process your drawings."
        return 1
    fi

    if ! ensure_repo_ready; then
        return 1
    fi

    print_info "Validating coverage for: $folder_name"
    print_info "Checking all structured JSON files in: $processed_path"
    echo ""
    print_warning "This checks that all schedule data (panels, equipment, fixtures, etc.)"
    print_warning "is being properly converted to facts for indexing."
    echo ""

    python3 tools/schedule_postpass/check_all_coverage.py "$processed_path"
    local exit_code=$?

    echo ""
    if [ $exit_code -eq 0 ]; then
        print_success "All files passed coverage check!"
        print_info "‚úÖ Safe to proceed with indexing: ohmni search $folder_name"
    else
        print_error "Coverage issues found!"
        print_warning "‚ö†Ô∏è  DO NOT INDEX until these are fixed!"
        echo ""
        print_info "Next steps:"
        echo "  1. Review the files with ‚ö†Ô∏è  warnings above"
        echo "  2. Check tools/schedule_postpass/QUICK_START.md for how to fix"
        echo "  3. Most fixes are <10 lines in tools/schedule_postpass/fallbacks/"
        echo "  4. Re-run: ohmni validate $folder_name"
    fi

    return $exit_code
}

run_search_pipeline() {
    local folder_name="$1"
    local mode="$2" # full | templates
    local desktop_path="/Users/collin/Desktop"
    local full_path="$desktop_path/$folder_name"
    local processed_path="$full_path/processed"

    if [ ! -d "$processed_path" ]; then
        print_error "Processed folder not found: $processed_path"
        print_info "Run 'ohmni process $folder_name' first."
        return 1
    fi

    if ! ensure_repo_ready; then
        return 1
    fi

    load_search_env
    if [ -z "$AZURE_SEARCH_ENDPOINT" ] || [ -z "$AZURE_SEARCH_API_KEY" ]; then
        print_error "Azure Search credentials missing. Set AZURE_SEARCH_ENDPOINT and AZURE_SEARCH_API_KEY in your environment or .env file."
        return 1
    fi

    local project_id_file=".project_id"
    local project_id="${OHMNI_PROJECT_ID:-$(cat "$project_id_file" 2>/dev/null)}"
    if [ -z "$project_id" ]; then
        project_id=$(echo "$folder_name" | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
    fi

    local transform_cmd=(python3 tools/schedule_postpass/transform.py "$processed_path" tmp/index_out "$project_id" --templates-root "$processed_path/room-data")
    if [ "$mode" = "templates" ]; then
        transform_cmd+=("--templates-only")
    fi

    print_info "Generating index payloads (mode: $mode) for $folder_name..."
    "${transform_cmd[@]}"
    local exit_code=$?
    if [ $exit_code -ne 0 ]; then
        print_error "Transform failed (exit code: $exit_code)"
        return $exit_code
    fi

    local upsert_cmd=(python3 tools/schedule_postpass/upsert_index.py --schema tools/schedule_postpass/unified_index.schema.json)
    if [ "$mode" = "templates" ]; then
        upsert_cmd+=(--templates tmp/index_out/templates.jsonl --mode incremental)
    else
        upsert_cmd+=(--synonyms tools/schedule_postpass/synonyms.seed.json --sheets tmp/index_out/sheets.jsonl --facts tmp/index_out/facts.jsonl --drawings tmp/index_out/drawings_unified.jsonl --templates tmp/index_out/templates.jsonl --mode full)
    fi

    print_info "Uploading to Azure Search ($( [ "$mode" = "templates" ] && echo "incremental" || echo "full" ))..."
    "${upsert_cmd[@]}"
    exit_code=$?
    if [ $exit_code -ne 0 ]; then
        print_error "Azure Search upload failed (exit code: $exit_code)"
        return $exit_code
    fi

    print_success "Azure Search load complete for $folder_name."
    return 0
}

# Main script logic
case "$1" in
    "process")
        if [ -z "$2" ]; then
            print_error "Please specify a folder name"
            echo ""
            show_help
            exit 1
        fi
        process_folder "$2"
        ;;
    "file")
        if [ -z "$2" ]; then
            print_error "Please specify a file path"
            echo ""
            show_help
            exit 1
        fi
        process_file "$2"
        ;;
    "validate")
        if [ -z "$2" ]; then
            print_error "Please specify a folder name"
            echo ""
            show_help
            exit 1
        fi
        validate_coverage "$2"
        ;;
    "search")
        if [ -z "$2" ]; then
            print_error "Please specify a folder name"
            echo ""
            show_help
            exit 1
        fi
        run_search_pipeline "$2" "full"
        ;;
    "search-templates")
        if [ -z "$2" ]; then
            print_error "Please specify a folder name"
            echo ""
            show_help
            exit 1
        fi
        run_search_pipeline "$2" "templates"
        ;;
    "help"|"--help"|"-h")
        show_help
        ;;
    "")
        print_error "No command specified"
        echo ""
        show_help
        exit 1
        ;;
    *)
        print_error "Unknown command: $1"
        echo ""
        show_help
        exit 1
        ;;
esac
