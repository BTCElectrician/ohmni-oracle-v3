# OpenAI API Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Azure Document Intelligence Configuration
DOCUMENTINTELLIGENCE_ENDPOINT=YOUR_DOCUMENTINTELLIGENCE_ENDPOINT
DOCUMENTINTELLIGENCE_API_KEY=YOUR_DOCUMENTINTELLIGENCE_API_KEY

# Optional Configuration
LOG_LEVEL=INFO
BATCH_SIZE=10
API_RATE_LIMIT=60
TIME_WINDOW=60

# Processing Configuration
# [DEPRECATED] This setting is no longer used as of version X.X
USE_SIMPLIFIED_PROCESSING=true

FORCE_MINI_MODEL=false
MAX_CONCURRENT_API_CALLS=20

# Model Selection Settings
MODEL_UPGRADE_THRESHOLD=20000  # Character threshold for using GPT-4o instead of GPT-4o-mini
USE_4O_FOR_SCHEDULES=true      # Whether to use GPT-4o for schedule drawings regardless of size
ENABLE_AI_CACHE=true
AI_CACHE_TTL_HOURS=24

# Model Configuration
DEFAULT_MODEL=gpt-4.1-mini
LARGE_DOC_MODEL=gpt-4.1
SCHEDULE_MODEL=gpt-4.1
TINY_MODEL=gpt-4.1-nano
TINY_MODEL_THRESHOLD=3000

# UPDATED Token Limits - Much Higher!
DEFAULT_MODEL_TEMP=0.1
DEFAULT_MODEL_MAX_TOKENS=32000  # Doubled
LARGE_MODEL_TEMP=0.1
LARGE_MODEL_MAX_TOKENS=32000    # Quadrupled for specs/large docs
TINY_MODEL_TEMP=0.0
TINY_MODEL_MAX_TOKENS=16000     # Doubled

# Fallback chain (comma-separated, in order)
MODEL_FALLBACK_CHAIN=gpt-4.1-mini,gpt-4o-mini,gpt-3.5-turbo

# PDF Connection Pooling (Optional)
ENABLE_PDF_POOLING=false          # Set to true to enable
PDF_POOL_SIZE=10                  # Max PDFs to keep open (default: 10)